/ {
    behaviors {
        pmw_rotation: pmw_rotation {
            compatible = "zmk,behavior-pmw-rotation";
            #binding-cells = <0>;
        };
    };

    combos {
        compatible = "zmk,combos";

        tab {
            bindings = <&kp TAB>;
            key-positions = <11 12>;
        };

        shift_tab {
            bindings = <&kp LS(TAB)>;
            key-positions = <12 13>;
        };

        muhennkann {
            bindings = <&to_layer_0 INT_MUHENKAN>;
            key-positions = <11 10>;
        };

        double_quotation {
            bindings = <&kp DOUBLE_QUOTES>;
            key-positions = <20 21>;
        };

        eq {
            bindings = <&kp EQUAL>;
            key-positions = <24 25>;
        };
    };

    macros {
        to_layer_0: to_layer_0 {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            bindings = <&to 0 &macro_param_1to1 &kp MACRO_PLACEHOLDER>;
            label = "TO_LAYER_0";
        };
    };

    behaviors {
        lt_to_layer_0: lt_to_layer_0 {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_TAP_TO_0";
            bindings = <&mo>, <&to_layer_0>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&mkp MCLK     &mkp LCLK      &mkp RCLK
&lt 5 ESCAPE  &pmw_rotation  &mo 6
            >;
        };

        FUNCTION {
            bindings = <
&trans  &trans  &trans
&trans  &trans  &trans
            >;
        };

        NUM {
            bindings = <
&trans  &trans  &trans
&trans  &trans  &trans
            >;
        };

        layer_3 {
            bindings = <
&trans  &trans  &trans
&trans  &trans  &trans
            >;
        };

        MOUSE {
            bindings = <
&trans  &trans  &trans
&trans  &trans  &trans
            >;
        };

        SCROLL {
            bindings = <
&mkp MB5  &mkp MB4  &trans
&trans    &trans    &trans
            >;
        };

        layer_6 {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2
&bt BT_SEL 3  &bt BT_CLR    &trans
            >;
        };
    };
};
